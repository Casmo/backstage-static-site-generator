{
    "name": "casmo/backstage-static-site-generator",
    "description": "Static site generator for the Backstage CMS.",
    "keywords": [
        "Mathieu de Ruiter",
        "laravel",
        "backstage-static-site-generator"
    ],
    "homepage": "https://github.com/casmo/backstage-static-site-generator",
    "license": "MIT",
    "authors": [
        {
            "name": "Mathieu de Ruiter",
            "email": "mathieu@fellicht.nl",
            "role": "Developer"
        }
    ],
    "require": {
        "php": "^8.3",
        "gumlet/php-image-resize": "*",
        "illuminate/contracts": "^11.0||^12.0",
        "spatie/laravel-package-tools": "^1.16",
        "voku/html-min": "^4.5"
    },
    "require-dev": {
        "laravel/pint": "^1.14",
        "nunomaduro/collision": "^8.8",
        "larastan/larastan": "^3.0",
        "orchestra/testbench": "^10.0.0||^9.0.0",
        "pestphp/pest": "^4.0",
        "pestphp/pest-plugin-arch": "^4.0",
        "pestphp/pest-plugin-laravel": "^4.0",
        "phpstan/extension-installer": "^1.4",
        "phpstan/phpstan-deprecation-rules": "^2.0",
        "phpstan/phpstan-phpunit": "^2.0",
        "spatie/laravel-ray": "^1.35"
    },
    "autoload": {
        "psr-4": {
            "BackstageStaticSiteGenerator\\": "src/",
            "BackstageStaticSiteGenerator\\Database\\Factories\\": "database/factories/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "BackstageStaticSiteGenerator\\Tests\\": "tests/",
            "Workbench\\App\\": "workbench/app/"
        }
    },
    "scripts": {
        "post-autoload-dump": "@composer run prepare",
        "prepare": "@php vendor/bin/testbench package:discover --ansi",
        "analyse": "vendor/bin/phpstan analyse",
        "test": "vendor/bin/pest",
        "test-coverage": "vendor/bin/pest --coverage",
        "format": "vendor/bin/pint"
    },
    "config": {
        "sort-packages": true,
        "allow-plugins": {
            "pestphp/pest-plugin": true,
            "phpstan/extension-installer": true
        }
    },
    "extra": {
        "laravel": {
            "providers": [
                "BackstageStaticSiteGenerator\\BackstageStaticSiteGeneratorServiceProvider"
            ],
            "aliases": {
                "BackstageStaticSiteGenerator": "BackstageStaticSiteGenerator\\Facades\\BackstageStaticSiteGenerator"
            }
        }
    },
    "minimum-stability": "dev",
    "prefer-stable": true
}
